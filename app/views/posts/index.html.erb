<div class="container mx-auto p-6">

  <!-- Page Title -->
  <h1 class="text-4xl font-bold text-center text-gray-800 mb-8">Posts</h1>

  <!-- Posts Loop -->
  <div class="space-y-8">
    <% @posts.each do |post| %>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-blue-600 hover:text-blue-800">
          <%= link_to post.title, post %>
        </h2>
        <span class="text-gray-600 text-sm">
          by - <%= post.user.name %>
        </span>
        <p class="mt-4 text-gray-700">
          <%= post.body %>
        </p>
        <p class="mt-2 text-sm text-gray-500">
          <%= post.likes.count %> <%= post.likes.count == 1 ? 'Like' : 'Likes' %>
        </p>
        <p class="mt-2 text-sm text-gray-500">
          <%= post.comments.count %> <%= post.comments.count == 1 ? 'Comment' : 'Comments' %>
        </p>
      </div>
    <% end %>
  </div>

  <!-- New Post Button -->
  <% if user_signed_in? %>
    <div class="mt-8 text-center">
      <%= link_to 'New Post', new_post_path, class: 'inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700' %>
    </div>
  <% end %>

</div>
