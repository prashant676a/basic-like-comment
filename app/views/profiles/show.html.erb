<h1 class="text-3xl font-bold mb-4">Profile</h1>

<div class="bg-white p-6 border border-gray-200 rounded-lg shadow-lg">
  <% if @user.profile_picture.attached? %>
    <%= image_tag @user.profile_picture, class: "w-32 h-32 rounded-full" %>
  <% else %>
    <p class="text-gray-500">No profile picture</p>
  <% end %>

  <p class="text-xl font-medium">Name: <%= @user.name %></p>
  <p class="text-xl font-medium">Email: <%= @user.email %></p>

  <%= link_to 'Edit Profile', edit_user_registration_path, class: "text-indigo-600 hover:text-indigo-800" %>
</div>


<h1 class="text-3xl font-bold m-4"> Your Posts</h1>

<!-- Posts Loop -->
  <div class="space-y-8">
    <% @posts.each do |post| %>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-blue-600 hover:text-blue-800">
          <%= link_to post.title, post %>
        </h2>
        <span class="text-gray-600 text-sm">
          by - <%= post.user.name %>
        </span>
        <p class="mt-4 text-gray-700">
          <%= post.body %>
        </p>
        <p class="mt-2 text-sm text-gray-500">
          <%= post.likes.count %> <%= post.likes.count == 1 ? 'Like' : 'Likes' %>
        </p>
        <p class="mt-2 text-sm text-gray-500">
          <%= post.comments.count %> <%= post.comments.count == 1 ? 'Comment' : 'Comments' %>
        </p>
      </div>
    <% end %>
  </div>